---
import { cn } from '@memsched/ui/utils';

interface Props {
  date: Date;
  class?: string;
}

const { date, class: className } = Astro.props;
---

<time datetime={date.toISOString()} class={cn('text-sm text-gray-500', className)}>
  {
    date.toLocaleDateString('en-us', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    })
  }
</time>

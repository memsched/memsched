{
  "name": "@memsched/memsched",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev --open",
    "build": "pnpm -C ../blog build && vite build",
    "build:e2e": "vite build --mode testing",
    "preview": "wrangler pages dev --port 5173",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "fix": "pnpm run check && eslint --fix --cache . && pnpm run format",
    "format": "prettier --write .",
    "lint": "pnpm run check && prettier --check . && eslint .",
    "test:unit": "vitest run",
    "test": "pnpm run test:unit -- --run && pnpm run test:e2e",
    "test:e2e": "playwright test",
    "db:push": "drizzle-kit push",
    "db:generate": "DATABASE_URL=file:local.db drizzle-kit generate",
    "db:migrate": "DATABASE_URL=file:local.db drizzle-kit migrate",
    "db:studio": "DATABASE_URL=file:local.db drizzle-kit studio",
    "deploy": "pnpm run build && wrangler pages deploy",
    "cf-typegen": "wrangler types && mv worker-configuration.d.ts src/",
    "d1:migrate": "wrangler d1 migrations apply memsched-db --local",
    "prod:d1:create": "wrangler d1 create memsched-db --remote",
    "prod:kv:create": "wrangler kv namespace create memsched-kv",
    "prod:d1:migrate": "wrangler d1 migrations apply memsched-db --remote --env production",
    "prod:d1:execute": "wrangler d1 execute memsched-db --remote --env production"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250504.0",
    "@eslint/compat": "^1.2.9",
    "@eslint/js": "^9.26.0",
    "@lucide/svelte": "^0.483.0",
    "@memsched/ui": "workspace:*",
    "@playwright/test": "^1.52.0",
    "@sveltejs/adapter-cloudflare": "^7.0.2",
    "@sveltejs/enhanced-img": "^0.4.4",
    "@sveltejs/kit": "^2.20.8",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@types/culori": "^2.1.1",
    "autoprefixer": "^10.4.21",
    "bits-ui": "^1.4.4",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-svelte": "^3.5.1",
    "formsnap": "^2.0.1",
    "globals": "^15.15.0",
    "lucide-svelte": "^0.483.0",
    "neverthrow": "^8.2.0",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "svelte": "^5.28.2",
    "svelte-check": "^4.1.7",
    "svelte-icons-pack": "^3.1.3",
    "svelte-markdown": "^0.4.1",
    "svelte-seo": "^1.6.1",
    "sveltekit-rate-limiter": "^0.6.1",
    "sveltekit-superforms": "^2.25.0",
    "tailwind-merge": "^3.2.0",
    "tailwind-variants": "^0.3.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vite": "^6.3.4",
    "vitest": "^3.1.2",
    "wrangler": "^4.14.1",
    "zod": "^3.24.3"
  },
  "dependencies": {
    "@cf-wasm/photon": "^0.1.30",
    "@cf-wasm/resvg": "^0.1.24",
    "@libsql/client": "^0.14.0",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "arctic": "^3.6.0",
    "culori": "^4.0.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.41.0",
    "highlight.js": "^11.11.1",
    "html-react-parser": "^5.2.3",
    "mode-watcher": "^1.0.5",
    "satori": "^0.12.2",
    "stripe": "^17.7.0",
    "svelte-french-toast": "^1.2.0",
    "uuid": "^11.1.0"
  },
  "packageManager": "pnpm@10.3.0+sha512.ee592eda8815a8a293c206bb0917c4bb0ff274c50def7cbc17be05ec641fc2d1b02490ce660061356bd0d126a4d7eb2ec8830e6959fb8a447571c631d5a2442d",
  "engines": {
    "node": "^22.12.0"
  }
}

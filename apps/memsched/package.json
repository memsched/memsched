{
  "name": "@memsched/memsched",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev --open",
    "build": "bun run --cwd ../blog build && vite build",
    "build:e2e": "vite build --mode testing",
    "preview": "wrangler pages dev --port 5173",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "fix": "bun run check && eslint --fix --cache . && bun run format",
    "format": "prettier --write .",
    "lint": "bun run check && prettier --check . && eslint .",
    "test:unit": "vitest run",
    "test": "bun run test:unit -- --run && bun run test:e2e",
    "test:e2e": "playwright test",
    "db:push": "drizzle-kit push",
    "db:generate": "DATABASE_URL=file:local.db drizzle-kit generate",
    "db:migrate": "DATABASE_URL=file:local.db drizzle-kit migrate",
    "db:studio": "DATABASE_URL=file:local.db drizzle-kit studio",
    "deploy": "bun run build && wrangler pages deploy",
    "cf-typegen": "wrangler types && mv worker-configuration.d.ts src/",
    "d1:migrate": "wrangler d1 migrations apply memsched-db --local",
    "prod:d1:create": "wrangler d1 create memsched-db --remote",
    "prod:kv:create": "wrangler kv namespace create memsched-kv",
    "prod:d1:migrate": "wrangler d1 migrations apply memsched-db --remote --env production",
    "prod:d1:execute": "wrangler d1 execute memsched-db --remote --env production"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260304.0",
    "@eslint/compat": "^2.0.2",
    "@eslint/js": "^10.0.1",
    "@lucide/svelte": "^0.562.0",
    "@memsched/ui": "workspace:*",
    "@playwright/test": "^1.58.2",
    "@sveltejs/adapter-cloudflare": "^7.2.8",
    "@sveltejs/enhanced-img": "^0.9.3",
    "@sveltejs/kit": "^2.53.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/vite": "^4.2.1",
    "@types/culori": "^4.0.1",
    "bits-ui": "^1.8.0",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.31.9",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-svelte": "^3.15.0",
    "formsnap": "^2.0.1",
    "globals": "^17.3.0",
    "lucide-svelte": "^0.483.0",
    "neverthrow": "^8.2.0",
    "prettier-plugin-svelte": "^3.5.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "svelte": "^5.53.3",
    "svelte-check": "^4.4.3",
    "svelte-icons-pack": "^3.1.3",
    "svelte-markdown": "^0.4.1",
    "svelte-seo": "^2.0.0",
    "sveltekit-rate-limiter": "^0.7.0",
    "sveltekit-superforms": "^2.30.0",
    "tailwind-merge": "^3.5.0",
    "tailwind-variants": "^3.2.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wrangler": "^4.68.1",
    "zod": "^4.3.6"
  },
  "dependencies": {
    "@cf-wasm/photon": "^0.3.4",
    "@cf-wasm/resvg": "^0.3.3",
    "@libsql/client": "^0.17.0",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "arctic": "^3.7.0",
    "culori": "^4.0.2",
    "date-fns": "^4.1.0",
    "domhandler": "^5.0.3",
    "drizzle-orm": "^0.45.1",
    "highlight.js": "^11.11.1",
    "html-react-parser": "^5.2.17",
    "htmlparser2": "^10.1.0",
    "mode-watcher": "^1.1.0",
    "satori": "^0.15.2",
    "stripe": "^20.3.1",
    "svelte-french-toast": "^1.2.0",
    "uuid": "^13.0.0"
  },
  "engines": {
    "node": "^24.0.0"
  }
}
